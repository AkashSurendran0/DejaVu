<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <div style="display: flex;justify-content: space-between;padding-top: 20px;">
          <div style="display: flex; flex-direction: column;">
        <h2
            class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
        >
            Offers
        </h2>
        <% if(msg.length>0){ %>
            <h4 class="text-success" id="msg"><%= msg %></h4>
            <br>
        <% } %>
        <% if(offErr.length>0){ %>
            <h4 class="text-danger" id="msg"><%= offErr %></h4>
            <br>
        <% } %>
    </div>
    <button style="background: rgb(138, 255, 130);color: black;width: 200px;height: 50px;border-radius: 15px;font-size: 13px;"><a href="/admin/offers/addOffer">ADD OFFERS +</a></button>
    </div>
      <div class="w-full overflow-hidden rounded-lg shadow-xs">
        <div class="w-full overflow-x-auto">
          <table class="w-full whitespace-no-wrap">
            <thead>
              <tr
                class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
              >
                <th class="px-4 py-3">No.</th>
                <th class="px-4 py-3">Category</th>
                <th class="px-4 py-3">Min Price</th>
                <th class="px-4 py-3">Max Price</th>
                <th class="px-4 py-3">Offer</th>
                <th class="px-4 py-3">Start Date</th>
                <th class="px-4 py-3">Expiry Date</th>
                <th class="px-4 py-3">Created At</th>
                <th class="px-4 py-3">Status</th>
                <th class="px-4 py-3">Actions</th>
              </tr>
            </thead>
            <tbody
              class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800"
            >
            <% for(let i=0;i<offers.length;i++){ %>
              <tr class="text-gray-700 dark:text-gray-400">
                <td class="px-4 py-3 text-sm">
                    <%= i+1 %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= offers[i].category %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= offers[i].minAmount %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= offers[i].maxAmount %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= offers[i].offer %> %
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= new Date(offers[i].startDate).toLocaleString() %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= new Date(offers[i].endDate).toLocaleString() %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= offers[i].createdAt.toLocaleString() %>
                </td>
                <td class="px-4 py-3 text-sm">
                    <%= offers[i].isActive? 'Active':'Not Active' %>
                </td>
                <td class="px-4 py-3">
                  <div style="display: flex;">
                  <button
                      class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray"
                      aria-label="Edit"
                      >
                      <a href="/admin/offers/editOffer/<%= offers[i]._id %>">
                      <svg
                        class="w-5 h-5"
                        aria-hidden="true"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                      <path
                        d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
                      ></path>
                      </svg>
                      </a>
                      </button>
                      <button
                        class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray"
                        aria-label="Delete"
                      >
                      <a href="/admin/offers/deleteOffer/<%= offers[i]._id %>">
                      <svg
                        class="w-5 h-5"
                        aria-hidden="true"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                      <path
                        fill-rule="evenodd"
                        d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                        clip-rule="evenodd"
                      ></path>
                      </svg>
                      </a>
                    </button>
                  </div>
                </td>
              </tr>
            <% } %>
            </tbody>
          </table>
        </div>
        <div
          class="grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-500 uppercase border-t dark:border-gray-700 bg-gray-50 sm:grid-cols-9 dark:text-gray-400 dark:bg-gray-800"
        >
          
          <span class="col-span-2"></span>
          <!-- Pagination -->
          <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
            <nav aria-label="Table navigation">
              <ul class="inline-flex items-center">
                <li>
                  <button
                    class="px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple"
                  >
                    <a href="/admin/categories?page=" class="active"></a>
                  </button>
                </li>
                  <li>
                    <button
                      class="px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple"
                    >
                      <a href="/admin/categories?page="></a>
                    </button>
                  </li>
              </ul>
            </nav>
          </span>
        </div>
      </div>
    </div>
  </main>

  <script>

    setTimeout(()=>{
        document.getElementById('msg').innerHTML=''
    },2000)

  </script>

<%- include('partials/footer') %>