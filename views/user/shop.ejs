<%- include('partials/userHeader') %>
<%- include('partials/userNavbar')%>

<style>
	.dashed-word {
      display: inline-flex;
      align-items: center;
    }

    .dash {
      border-bottom: 1px dashed black;
      flex: 1;
      margin: 0 5px;
    }

	.review-stars input[type='radio']{
      display: none;
    }

    .review-stars label{
      font-size: 20px;
    }

    .review-stars{
      display: flex;
      flex-direction: row-reverse;
      justify-content: flex-end;
    }

	.productSearch{
		margin-left: 40px;
	}

	.search-input {
        width: 400px;
        padding: 10px 40px 10px 35px;
        border: 2px solid #555;
        border-radius: 25px;
        background-color: #ffffff;
        color: black;
        font-size: 16px;
        outline: none;
        transition: 0.3s;
    }

	.search-input:focus {
        border-color: #dbcc8f;
    }

</style>

    <div class="hero-wrap hero-bread" style="background-image: url('<%= banner.image %>');">
