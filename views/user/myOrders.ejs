<%- include('partials/userHeader') %>
<%- include('partials/userNavbar') %>

<style>

    .orders img{
        width: 70px;
        height: 100px;
    }

</style>

<div class="hero-wrap hero-bread" style="background-image: url('/uploads/settingsbanner.PNG');">
    <div class="container">
      <div class="row no-gutters slider-text align-items-center justify-content-center">
        <div class="col-md-9 ftco-animate text-center">
            <h1 class="mb-0 bread" style="background: white;">MY ORDERS</h1>
        </div>
      </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li><a href="/user" style="color: rgba(33, 37, 41, 0.75);">Home&nbsp;&nbsp;>&nbsp;&nbsp;</a></li>
                  <li><a href="/user/shop" style="color: rgba(33, 37, 41, 0.75);">Shop&nbsp;&nbsp;>&nbsp;&nbsp;</a></li>
                  <li>My Orders</li>
                </ol>
            </nav>
            <%- include('partials/settingsNavbar') %>
            <div class="col-md-10">
                <h2 class="mb-4" style="font-weight: bold;">ORDER HISTORY</h2>
                <% if(allOrders.length==0){ %>
                    <div style="text-align: center;">
                        <br>
                        <h5>No orders made</h5>
                    </div>
                <% }else{ %>
                    <table class="table orders">
                        <thead>
                            <tr class="text-center">
                                <th class="image-prod">Products</th>
                                <th class="product-name">Address</th>
                                <th>Order Date</th>
                                <th class="price">Quantity</th>
                                <th class="quantity">Amount</th>
                                <th class="total">Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0;i<allOrders.length;i++){ %>
                                <tr class="text-center">
                                    <td><% allOrders[i].resultProducts.forEach(product=>{ %>
                                        <img src="<%= product.images[0] %>" alt="">
                                    <% }) %></td>
                                    <td><div>
                                        <p class="mb-1"><b><%= allOrders[i].resultAddress.address.name %></b></p>
                                        <p class="mb-0"><%= allOrders[i].resultAddress.address.state %>, <%= allOrders[i].resultAddress.address.streetAddress %>, <%= allOrders[i].resultAddress.address.city %>, <%= allOrders[i].resultAddress.address.postcode %>, <%= allOrders[i].resultAddress.address.phone %></p>
                                    </div></td>
                                    <td><%= allOrders[i].createdAt.toLocaleDateString() %></td>
                                    <td><%= allOrders[i].quantity %></td>
                                    <td>â‚¹<%= allOrders[i].totalAmount %></td>
                                    <td><span class="btn btn-<%= 
                                        allOrders[i].status === 'Pending' ? 'warning' :
                                        allOrders[i].status === 'Shipped' ? 'primary' :
                                        allOrders[i].status === 'Out for Delivery' ? 'info' :
                                        allOrders[i].status === 'Delivered' ? 'success' :
                                        allOrders[i].status === 'Cancelled' ? 'danger' : 
                                        'dark' 
                                      %>">
                                        <%= allOrders[i].status %>
                                      </span></td>
                                    <td><a href="/user/order/order-summary/<%= allOrders[i]._id %>"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-right-circle-fill orderDetails" viewBox="0 0 16 16">
                                        <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"/>
                                      </svg></a></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
</section>

<%- include('partials/userFooter') %>