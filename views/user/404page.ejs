<%- include('partials/userHeader') %>
<%- include('partials/userNavbar') %>

<div style="display: flex;justify-content: center;align-items: center;">
<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div style="text-align: center; padding: 32px; background-color: white; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); max-width: 500px; margin: 0 16px;">
        <div style="margin-bottom: 24px;">
            <svg style="margin: 0 auto; height: 64px; width: 64px; color: #6b7280;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>
        
        <h2 style="font-size: 32px; font-weight: bold; color: #1f2937; margin-bottom: 16px;">404</h2>
        <h3 style="font-size: 24px; font-weight: bold; color: #1f2937; margin-bottom: 24px;">Page Not Found</h3>
        
        <p style="color: #4b5563; margin-bottom: 24px;">
            Oops! The page you're looking for seems to have gone on vacation.
        </p>
        
        <ul style="text-align: left; color: #4b5563; margin-bottom: 32px; padding-left: 24px;">
            <li style="margin-bottom: 8px;">The link might be broken</li>
            <li style="margin-bottom: 8px;">The page may have been moved or deleted</li>
            <li style="margin-bottom: 8px;">You might have typed the address incorrectly</li>
        </ul>
        
        <div>
            <button onclick="goHome()" style="background-color: #3b82f6; color: white; font-weight: 600; padding: 8px 24px; border-radius: 6px; border: none; cursor: pointer; margin-right: 12px; margin-bottom: 16px;">
                Go Home
            </button>
            <button style="background-color: #6b7280; color: white; font-weight: 600; padding: 8px 24px; border-radius: 6px; border: none; cursor: pointer; margin-bottom: 16px;">
                Report Issue
            </button>
            
            <p style="font-size: 14px; color: #6b7280;">
                Need help? Feel free to contact our support team.
            </p>
        </div>
    </div>
</div>
</div>

<script>

    const goHome = () => window.location.href='/user'

</script>

